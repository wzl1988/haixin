<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F9F9FA"
    android:layout_height="wrap_content">


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item_bg">

    <LinearLayout
        android:id="@+id/tv_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_detele"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_update" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="修改"
            android:textColor="#ff999999"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_detele"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_update"
        app:layout_constraintTop_toBottomOf="@id/line">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_detele" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="删除"
            android:textColor="#ff999999"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_xzdm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="小组代码："
        android:textColor="#ff333333"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_xzdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="小组001"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_xzdm_text"
        app:layout_constraintStart_toEndOf="@id/tv_xzdm_text"
        app:layout_constraintTop_toTopOf="@id/tv_xzdm_text" />

    <TextView
        android:id="@+id/tv_xzmc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="小组名称："
        android:textColor="#ff333333"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_xzdm_text"
        app:layout_constraintTop_toBottomOf="@id/tv_xzdm_text" />

    <TextView
        android:id="@+id/tv_xzmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="机加小组"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_xzmc_text"
        app:layout_constraintStart_toStartOf="@id/tv_xzdm"
        app:layout_constraintTop_toTopOf="@id/tv_xzmc_text" />


    <TextView
        android:id="@+id/tv_bgsj_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="报工时间："
        android:textColor="#ff333333"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_xzmc_text"
        app:layout_constraintTop_toBottomOf="@id/tv_xzmc_text" />


    <TextView
        android:id="@+id/tv_sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-10-14  10:54:00"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_bgsj_text"
        app:layout_constraintStart_toStartOf="@id/tv_xzdm"
        app:layout_constraintTop_toTopOf="@id/tv_bgsj_text" />


    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:alpha="0.1"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_bgsj_text"
        app:layout_constraintTop_toBottomOf="@id/tv_bgsj_text" />


    <View
        android:id="@+id/line2"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="9dp"
        android:alpha="0.1"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>