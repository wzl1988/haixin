<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.work.quality.repair.RepairDisposeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:src="@mipmap/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="返修处理"
            android:textColor="#ff333333"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cons_title">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
        android:id="@+id/ll_lzk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条码号："
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_15sp" />

        <EditText
            android:id="@+id/tv_tmh"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_rectangular_in_edit_bg"
            android:drawableRight="@mipmap/ic_scan"
            android:gravity="center_vertical"
            android:hint="请扫描条码号"
            android:padding="5dp"
            android:textSize="@dimen/font_13sp" />

    </LinearLayout>

        <RelativeLayout style="@style/item_text_container">

            <TextView
                style="@style/item_text_name"
                android:text="物品号:" />

            <TextView
                android:id="@+id/tv_wph"
                style="@style/item_text_content" />

        </RelativeLayout>



            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="物品名称:" />

                <TextView
                    android:id="@+id/tv_wpmc"
                    style="@style/item_text_content" />

            </RelativeLayout>


            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="规格:" />

                <TextView
                    android:id="@+id/tv_gg"
                    style="@style/item_text_content" />

            </RelativeLayout>



            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="流转卡号:" />

                <TextView
                    android:id="@+id/tv_lzkh"
                    style="@style/item_text_content" />

            </RelativeLayout>

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="任务单号:" />

                <TextView
                    android:id="@+id/tv_rwdh"
                    style="@style/item_text_content" />

            </RelativeLayout>

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="生产订单号:" />

                <TextView
                    android:id="@+id/tv_scddh"
                    style="@style/item_text_content" />

            </RelativeLayout>



            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="报工记录流水号:" />

                <TextView
                    android:id="@+id/tv_bgjlslh"
                    android:layout_marginStart="120dp"
                    style="@style/item_text_content" />

            </RelativeLayout>



            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="报工数量:" />

                <TextView
                    android:id="@+id/tv_bgsl"
                    style="@style/item_text_content" />

            </RelativeLayout>



            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="关联条码:" />

                <TextView
                    android:id="@+id/tv_gltmh"
                    style="@style/item_text_content" />

            </RelativeLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/card_zjxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="返休信息"
                android:textColor="@color/main"
                android:textSize="@dimen/font_large" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返修工时:"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_15sp" />

                <EditText
                    android:id="@+id/et_fxgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/shape_rectangular_in_edit_bg"
                    android:gravity="top"
                    android:inputType="numberDecimal"
                    android:hint="@string/please_input"
                    android:padding="5dp"
                    android:textSize="@dimen/font_middle" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返修人员:"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    android:id="@+id/tv_ry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/shape_rectangular_in_edit_bg"
                    android:gravity="top"
                    android:inputType="numberDecimal"
                    android:hint="@string/please_choose"
                    android:padding="5dp"
                    android:textSize="@dimen/font_middle" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="返修说明:"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_15sp" />

                <EditText
                    android:id="@+id/et_fxsm"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/shape_rectangular_in_edit_bg"
                    android:gravity="top"
                    android:hint="请输入"
                    android:padding="5dp"
                    android:textSize="@dimen/font_middle" />

            </LinearLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_cxxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout style="@style/item_text_container">

                        <TextView
                            style="@style/item_text_name"
                            android:text="操作员：" />

                        <TextView
                            android:id="@+id/tv_czy"
                            style="@style/item_text_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/item_text_container"
                        android:layout_marginBottom="10dp">

                        <TextView
                            style="@style/item_text_name"
                            android:text="日期：" />

                        <TextView
                            android:id="@+id/tv_rq"
                            style="@style/item_text_content" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBE7E7" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_rectangular_button_5_bg"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>