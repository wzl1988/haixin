<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangular_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:src="@mipmap/ic_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="批号："
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_ph"
                    style="@style/item_text_content"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/shape_rectangular_white_5_bg" />

            </RelativeLayout>

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="更换人："
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_ghr"
                    style="@style/item_text_content"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/shape_rectangular_white_5_bg" />

            </RelativeLayout>

            <RelativeLayout style="@style/item_text_container">

                <TextView
                    style="@style/item_text_name"
                    android:text="更换时间："
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_ghsj"
                    style="@style/item_text_content"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/shape_rectangular_white_5_bg" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="19dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:background="@drawable/shape_rectangular_white_bg"
                    android:text="取消"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_15sp" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/shape_rectangular_btn_bg_3"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_15sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>