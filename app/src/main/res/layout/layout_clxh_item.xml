<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_wpbzs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品编组数："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tv_bzs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="14sp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toStartOf="@id/tv_delete"
        app:layout_constraintTop_toTopOf="@id/tv_wpbzs_text"
        app:layout_constraintStart_toEndOf="@id/tv_wpbzs_text"
        />


    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="#fffa6a6a"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/tv_wpbzs_text"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_wpmc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品名称："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_wpbzs_text"
        app:layout_constraintStart_toStartOf="@id/tv_wpbzs_text"
        />

    <TextView
        android:id="@+id/tv_wpmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_bzs"
        app:layout_constraintTop_toTopOf="@id/tv_wpmc_text"
        />


    <TextView
        android:id="@+id/tv_kysl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可用数量："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_wpmc_text"
        app:layout_constraintStart_toStartOf="@id/tv_wpmc_text"
        />


    <EditText
        android:id="@+id/et_sl"
        android:layout_width="116dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@id/tv_bzs"
        app:layout_constraintTop_toTopOf="@id/tv_kysl_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_kysl_text"
        android:background="@drawable/shape_rectangular_edit_bg"/>

    <TextView
        android:id="@+id/tv_xhbl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消耗比率："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_kysl_text"
        app:layout_constraintStart_toStartOf="@id/tv_kysl_text"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/tv_xhbl_text"
        app:layout_constraintStart_toStartOf="@id/tv_bzs"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#E9E9E9"/>



</androidx.constraintlayout.widget.ConstraintLayout>