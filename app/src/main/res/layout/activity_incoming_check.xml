<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:src="@mipmap/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="来料检验处理"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rl"
        app:layout_constraintTop_toBottomOf="@id/cons_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout style="@style/item_text_container">

                            <TextView
                                style="@style/item_text_name"
                                android:text="任务编号:" />

                            <TextView
                                android:id="@+id/tv_rwbh"
                                style="@style/item_text_content" />

                        </RelativeLayout>

                        <RelativeLayout style="@style/item_text_container">

                            <TextView
                                style="@style/item_text_name"
                                android:text="物品号：" />

                            <TextView
                                android:id="@+id/tv_wph"
                                style="@style/item_text_content" />

                        </RelativeLayout>

                        <RelativeLayout style="@style/item_text_container">

                            <TextView
                                style="@style/item_text_name"
                                android:text="物品名称：" />

                            <TextView
                                android:id="@+id/tv_wpmc"
                                style="@style/item_text_content" />

                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/item_text_container"
                            android:layout_marginBottom="16dp">

                            <TextView
                                style="@style/item_text_name"
                                android:text="规格描述：" />

                            <TextView
                                android:id="@+id/tv_ggms"
                                style="@style/item_text_content" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_zjxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="质检信息"
                        android:textColor="@color/main"
                        android:textSize="@dimen/font_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结果判定:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_15sp" />

                        <RadioGroup
                            android:id="@+id/rg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/main"
                                android:checked="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合格"
                                android:textColor="@color/gray6"
                                android:textSize="@dimen/font_middle" />

                            <RadioButton
                                android:id="@+id/unPass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:buttonTint="@color/main" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="不合格"
                                android:textColor="@color/gray6"
                                android:textSize="@dimen/font_middle" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="合格数量:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_15sp" />

                        <TextView
                            android:id="@+id/et_hgsl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/shape_rectangular_in_edit_bg"
                            android:gravity="top"
                            android:hint="@string/please_input"
                            android:padding="5dp"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="不合格数量:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_15sp" />

                        <EditText
                            android:id="@+id/et_bhgsl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/shape_rectangular_in_edit_bg"
                            android:gravity="top"
                            android:hint="@string/please_input"
                            android:padding="5dp"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="拒收数量:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_15sp" />

                        <EditText
                            android:id="@+id/et_jssl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/shape_rectangular_in_edit_bg"
                            android:gravity="top"
                            android:hint="@string/please_input"
                            android:padding="5dp"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="检验描述:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_15sp" />

                        <EditText
                            android:id="@+id/et_jyms"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/shape_rectangular_in_edit_bg"
                            android:gravity="top"
                            android:hint="请输入"
                            android:padding="5dp"
                            android:textSize="@dimen/font_middle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="图片:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_15sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rc_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_marginStart="19dp" />

                        <ImageView
                            android:id="@+id/image_add"
                            android:layout_width="68dp"
                            android:layout_height="65dp"
                            android:src="@mipmap/ic_upload"
                            app:layout_constraintStart_toStartOf="@id/et_describe"
                            app:layout_constraintTop_toBottomOf="@id/et_describe" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_zjxm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="质检项目"
                        android:textColor="@color/main"
                        android:textSize="@dimen/font_large" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_cxxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout style="@style/item_text_container">

                        <TextView
                            style="@style/item_text_name"
                            android:text="操作员：" />

                        <TextView
                            android:id="@+id/tv_czy"
                            style="@style/item_text_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/item_text_container"
                        android:layout_marginBottom="10dp">

                        <TextView
                            style="@style/item_text_name"
                            android:text="日期：" />

                        <TextView
                            android:id="@+id/tv_rq"
                            style="@style/item_text_content" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBE7E7" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_rectangular_button_5_bg"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>