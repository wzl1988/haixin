<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9E9E9"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_zyxm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组员姓名："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/et_xzmc"
        app:layout_constraintBottom_toBottomOf="@id/et_xzmc"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_xzmc"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:paddingStart="5dp"
        android:enabled="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/tv_zyxm"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_rectangular_in_edit_bg"/>



    <EditText
        android:id="@+id/et_zygh"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:enabled="false"
        android:paddingStart="5dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/et_xzmc"
        app:layout_constraintTop_toBottomOf="@id/et_xzmc"
        android:background="@drawable/shape_rectangular_in_edit_bg"/>

    <EditText
        android:id="@+id/et_fpxs"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:paddingStart="5dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintStart_toStartOf="@id/et_xzmc"
        app:layout_constraintTop_toBottomOf="@id/et_zygh"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_rectangular_in_edit_bg"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组员工号："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/et_zygh"
        app:layout_constraintBottom_toBottomOf="@id/et_zygh"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分配系数："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/et_fpxs"
        app:layout_constraintBottom_toBottomOf="@id/et_fpxs"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_detele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="#fffa6a6a"
        android:textSize="14sp"
        android:paddingEnd="15dp"
        android:paddingTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>