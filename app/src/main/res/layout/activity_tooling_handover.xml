<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="工装编号："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <RelativeLayout
                        android:id="@+id/scan"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:background="@drawable/shape_shadow_box">

                        <TextView
                            android:id="@+id/tv_gzbh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray6"
                            android:textSize="@dimen/font_middle" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:src="@mipmap/icon_scan" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="工装名称："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_gzmc"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="规格型号："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_gg"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="工装地点："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_gzdd"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="当前所在设备："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_dqszsb"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="当前领用人："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_dqlyr"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_item_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="交接信息"
                    android:textColor="@color/tab_unchecked"
                    android:textSize="@dimen/font_large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="接收位置："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:background="@drawable/shape_shadow_box">

                        <EditText
                            android:id="@+id/et_jswz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:textColor="@color/gray6"
                            android:textSize="@dimen/font_middle" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="接收人："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <RelativeLayout
                        android:id="@+id/rl_jsr"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:background="@drawable/shape_shadow_box">

                        <TextView
                            android:id="@+id/tv_jsr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray6"
                            android:textSize="@dimen/font_middle" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.1"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="操作员："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_czy"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="操作时间："
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/font_15sp" />

                    <TextView
                        android:id="@+id/tv_czsj"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="2.2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray6" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/shape_button_post"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>