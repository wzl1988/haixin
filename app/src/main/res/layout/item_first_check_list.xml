<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_check"
                style="@style/button_post_style"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:text="开始检验"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/item_text_container"
                    android:layout_marginTop="40dp">

                    <TextView
                        style="@style/item_text_name"
                        android:text="任务编号:" />

                    <TextView
                        android:id="@+id/tv_rwbh"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="工单号：" />

                    <TextView
                        android:id="@+id/tv_gdh"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="生产订单号：" />

                    <TextView
                        android:id="@+id/tv_scddh"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="物品号：" />

                    <TextView
                        android:id="@+id/tv_wph"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="物品名称：" />

                    <TextView
                        android:id="@+id/tv_wpmc"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="规格描述：" />

                    <TextView
                        android:id="@+id/tv_ggms"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="数量：" />

                    <TextView
                        android:id="@+id/tv_sl"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/item_text_container"
                    android:layout_marginBottom="16dp">

                    <TextView
                        style="@style/item_text_name"
                        android:text="创建时间：" />

                    <TextView
                        android:id="@+id/tv_cjsj"
                        style="@style/item_text_content" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>