<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_check"
                style="@style/button_post_style"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:text="检验登记"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    style="@style/item_text_container"
                    android:layout_marginTop="40dp">

                    <TextView
                        style="@style/item_text_name"
                        android:text="送检单号:" />

                    <TextView
                        android:id="@+id/tv_sjdh"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="流转卡号:" />

                    <TextView
                        android:id="@+id/tv_lzkh"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="任务单号:" />

                    <TextView
                        android:id="@+id/tv_rwbh"
                        style="@style/item_text_content" />

                </RelativeLayout>



                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="生产订单号：" />

                    <TextView
                        android:id="@+id/tv_scddh"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="物品号：" />

                    <TextView
                        android:id="@+id/tv_wph"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="物品名称：" />

                    <TextView
                        android:id="@+id/tv_wpmc"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="规格描述：" />

                    <TextView
                        android:id="@+id/tv_ggms"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="工序：" />

                    <TextView
                        android:id="@+id/tv_gx"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="送检数量：" />

                    <TextView
                        android:id="@+id/tv_sl"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="车间：" />

                    <TextView
                        android:id="@+id/tv_cj"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="加工单元：" />

                    <TextView
                        android:id="@+id/tv_jgdy"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="检验员：" />

                    <TextView
                        android:id="@+id/tv_jyy"
                        style="@style/item_text_content" />

                </RelativeLayout>


                <RelativeLayout style="@style/item_text_container">

                    <TextView
                        style="@style/item_text_name"
                        android:text="送检时间：" />

                    <TextView
                        android:id="@+id/tv_cjsj"
                        style="@style/item_text_content" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/item_text_container"
                    android:layout_marginBottom="16dp">

                    <TextView
                        style="@style/item_text_name"
                        android:text="检验描述：" />

                    <TextView
                        android:id="@+id/tv_jyms"
                        style="@style/item_text_content" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>